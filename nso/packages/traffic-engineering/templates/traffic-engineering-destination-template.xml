<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DESTINATION_DEVICE}</name>
      <config>
        <configure xmlns="urn:nokia.com:sros:ns:yang:sr:conf">
          <policy-options>

            <community>
              <name>COLOR_{$COLOR}</name>
              <member>
                <member>color:00:{$COLOR}</member>
              </member>
            </community>

            <policy-statement>
              <name>{$EXPORT_POLICY_NAME}</name>
              <entry>
                <entry-id>{$ENTRY}</entry-id>
                <action>
                  <action-type>accept</action-type>
                  <community>
                    <add>COLOR_{$COLOR}</add>
                  </community>
                </action>
              </entry>
            </policy-statement>

          </policy-options>
        </configure>
      </config>
    </device>
  </devices>
</config>